{
	"manifest_version": 3,
	"name": "Custom Colors",
	"version": "2.0",
	"description": "A chrome plugin to replace certain colors on certain websites",
	"author": "Koro <matthews.r.mike@gmail.com>",
	"permissions": [
		"activeTab",
		"tabs",
		"storage"
	],
	"host_permissions": [
		"https://itch.io/dashboard/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://itch.io/dashboard",
				"https://itch.io/dashboard/*"
			],
			"js": [
				"contentScript.js"
			]
		}
	],
	"action": {
		"default_icon": {
			"16": "assets/icon.png",
			"24": "assets/icon.png",
			"32": "assets/icon.png"
		},
		"default_popup": "popup.html"
	}
}